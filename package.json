{
  "name": "saldo-diario-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --out-dir build --format esm --target node20 --sourcemap --clean",
    "start": "node build/server.js",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@hono/node-server": "^1.19.0",
    "better-auth": "^1.3.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.5.0",
    "hono": "^4.9.4",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "zod": "^4.1.4"
  }
}